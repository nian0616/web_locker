{
    "name": "WebLocker",
    "description": "Locks specific webs. You are only allowed to browse them for certain timespan every day.",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js", "popup.js"]
    },
    "permissions": ["storage", "activeTab", "tabs", "windows"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/16.png",
            "32": "/images/32.png",
            "48": "/images/48.png",
            "128": "/images/128.png"
        }
    },
    "icons": {
        "16": "/images/16.png",
        "32": "/images/32.png",
        "48": "/images/48.png",
        "128": "/images/128.png"
    },
    "web_accessible_resources": ["suspended.html"]
}